<h2>Login Page</h2>
<% if flash[:errors] %>
<ul class="errors">
    <li><%=flash[:errors]%></li>
</ul>

<% end %>
<br>
<%=form_for(:session, url: login_path, class: "form-horizontal") do |f| %>
  <div class="form-group">
    <%= f.label :user_name,  class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :user_name, class: "form-control", id: "user_name", placeholder: "Username" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", id: "inputPassword3", placeholder: "Password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%=f.button "Sign in", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
<br>
<br>
<p class="text-center"><h5>Don't have an account?</h5>
<%= button_to "Create one here!", new_user_path, method: :get, class: "btn btn-default"%></p>
