<h1>Login Page</h1>
<% if flash[:errors] %>
<ul class="errors">
    <li><%=flash[:errors]%></li>
</ul>

<% end %>
<%= form_for(:session, url: login_path) do |f| %>
<%= f.label :user_name %>
<%= f.text_field :user_name %>
<br>
<%= f.label :password %>
<%= f.password_field :password %>
<br>
<%= f.submit "Login"%>
<% end %>

<h3>Don't have an account?</h3>
<%= button_to "Create one here!", new_user_path, method: :get %>
