<% if flash[:errors] %>
<ul class="errors">
  <% flash[:errors].each do |msg| %>
    <li><%=msg%></li>
  <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :user_name %>
<%= f.text_field :user_name %>
<br>
<%= f.label :email %>
<%= f.text_field :email %>
<br>
<%= f.label :location %>
<%= f.text_field :location %>
<br>
<%= f.label :password %>
<%= f.password_field :password %>
<br>
<%= f.submit %>
<% end %>
