<%= form_for @ad do |f|%>

<%= f.label "Item Name:" %>
<%= f.text_field :name %>

<%= f.label "Item Description:" %>
<%= f.text_field :item_description %>

<%= f.label "Link to image:" %>
<%= f.text_field :image_path %>
<%= f.collection_select :category_id, @categories, :id, :name  %>
<%= f.submit %>
<% end %>

<%=form_for @ad, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :name,  class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", id: "name", placeholder: "Item Name:" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :item_description,  class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :item_description, class: "form-control", id: "item_description", placeholder: "Item Description" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image_path,  class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :image_path, class: "form-control", id: "image_path", placeholder: "Link to Image:" %>
    </div>
  </div>

  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%=f.button "Create Account", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
