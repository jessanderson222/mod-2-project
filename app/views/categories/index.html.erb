<h2>The Yellow Pages</h2>
<br>
<% if @user != nil %>
  <h5>Welcome <%=@user.user_name %>!</h5>
<% end %>


<div class="row">
  <% @categories.each do |category| %>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title"><%= link_to category.name, category %></h4>
        <p class="card-text"><%= category.description %></p>
        <a href="<%=category_path(category)%>" class="btn btn-primary">See ads</a>
      </div>
    </div>
  </div>
  <% end %>
</div>
